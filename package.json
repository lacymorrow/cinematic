{
	"private": true,
	"name": "cinematic",
	"description": "Cinematic takes the effort out of organizing your movies and finds information, photos, and trailers for you to make choosing what to watch a breeze.",
	"version": "3.0.0",
	"license": "MIT",
	"author": {
		"name": "Lacy Morrow",
		"email": "me@lacymorrow.com",
		"url": "https://lacymorrow.com"
	},
	"repository": "lacymorrow/cinematic",
	"homepage": "https://github.com/lacymorrow/cinematic",
	"bugs": {
		"url": "https://github.com/lacymorrow/cinematic/issues"
	},
	"engines": {
		"node": ">=10 <14"
	},
	"main": "app/background.js",
	"scripts": {
		"build": "nextron build --all",
		"dev": "nextron",
		"lint": "xo --fix",
		"test": "npm run lint && ava -v",
		"postinstall": "electron-builder install-app-deps"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test"
		}
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"extends": [
			"xo-react"
		],
		"rules": {
			"array-bracket-spacing": [
				"error",
				"always"
			],
			"padded-blocks": [
				"error",
				{
					"blocks": "always",
					"switches": "always",
					"classes": "always"
				}
			],
			"padding-line-between-statements": [
				"error",
				{
					"blankLine": "always",
					"prev": "multiline-block-like",
					"next": "*"
				},
				{
					"blankLine": "always",
					"prev": "*",
					"next": "return"
				}
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"space-in-parens": [
				"error",
				"always"
			]
		},
		"semicolon": false
	},
	"devDependencies": {
		"ava": "^3.3.0",
		"babel-plugin-styled-components": "^1.10.7",
		"electron": "^7.1.1",
		"electron-builder": "^22.1.0",
		"electron-serve": "^0.4.0",
		"electron-store": "^5.1.0",
		"electron-timber": "^0.5.1",
		"electron-util": "^0.14.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.18.3",
		"eslint-plugin-react-hooks": "^2.4.0",
		"husky": "^4.2.3",
		"nextron": "^5.14.0",
		"np": "^6.1.0",
		"spectron": "^10.0.1",
		"xo": "^0.26.1"
	},
	"dependencies": {
		"ky": "^0.17.0",
		"ky-universal": "^0.5.0",
		"lodash": "^4.17.15",
		"movie-info": "^2.0.5",
		"movie-trailer": "^2.0.6",
		"next": "^9.1.3",
		"nprogress": "^0.2.0",
		"omdb-client": "^2.0.0",
		"parse-torrent-name": "^0.5.4",
		"polished": "^3.4.4",
		"prop-types": "^15.7.2",
		"queue": "^6.0.1",
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"react-icons": "^3.9.0",
		"styled-components": "^5.0.1"
	}
}
