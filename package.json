		"lucide-react": "^0.294.0",
		"movie-info": "^3.0.2",
		"movie-trailer": "^3.2.2",
		"omdb-client": "^2.0.0",
		"omdbapi": "^4.0.0",
		"parse-torrent-filename": "https://github.com/lacymorrow/parse-torrent-filename.git",
		"react": "^18.2.0",
